{
  "manifest_version": 2,

  "name": "GreatSource",
  "description": "Makes GradeSource suck less.",
  "version": "1.0",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    "jquery-2.0.3.min.map",
    "homepage/index.html",
    "homepage/index.css"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.gradesource.com/*", "http://gradesource.com/*"],
      "js": ["jquery-2.0.3.min.js", "scraper.js", "greatsource.js"],
      "css": ["greatsource.css"],
      "run_at": "document_end",
      "all_frames": true
    }, {
      "matches": ["http://www.gradesource.com/home", "http://gradesource.com/home"],
      "js": ["jquery-2.0.3.min.js", "homeroute.js"],
      "run_at": "document_start"
    }, {
      "matches": ["http://www.gradesource.com/home", "http://gradesource.com/home"],
      "js": ["jquery-2.0.3.min.js", "homepage/index.js"],
      "run_at": "document_end"
    }, {
      "matches": ["http://www.gradesource.com/*", "http://gradesource.com/*"],
      "css": ["homepage/index.css"],
      "all_frames": true
    }
  ]
}
