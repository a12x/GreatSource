{
  "manifest_version": 2,

  "name": "GreatSource",
  "description": "Makes GradeSource suck less.",
  "version": "1.0",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": ["jquery-2.0.3.min.map"],

  "content_scripts": [
    {
      "matches": ["http://www.gradesource.com/*", "http://gradesource.com/*"],
      "js": ["jquery-2.0.3.min.js", "greatsource.js"],
      "css": ["greatsource.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
